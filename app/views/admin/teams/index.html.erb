<div class="row">
  <div class="col-md-12">
    <div class="card">

      <!-- div box header -->
      <div class="card-header card-header-icon card-header-primary">
        <div class="card-icon">
          <i class="material-icons">group_work</i>
  			  <p>Teams</p>
        </div>
        <h4 class="card-title">Teams</h4>
      </div>

      <!-- box content -->
      <div class="card-body">
        <div class="toolbar text-right">
          <%= link_to new_admin_team_path(), class: "btn btn-primary btn-link" do %>
            <i class="material-icons">add</i> Add New Teams
          <% end %>
        </div>
            
        <!-- data table -->
        <div class="material-datatables">
        <table class="datatables table table-action non-first-col-ordering" cellspacing="0" width="100%" style="width:100%">
            <thead>
              <tr>
                <th>Team Name</th>
                <th>First Player</th>
                <th>Second Player</th>
                <th class="text-right" width=60>Edit</th>				
                <th class="text-right" width=60>View</th>
                <th class="text-right" width=60>Delete</th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: "admin/teams/team", collection: @teams %>
            </tbody>
          </table>

        </div>

      </div>

    </div>
    <!-- end card -->

  </div>
  <!-- end col-md-12 -->

</div>    
<!-- end row -->
<%= render "admin/shared/custom" %>