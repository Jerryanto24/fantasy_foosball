<div class="row">
    <div class="col-md-12">
        <div class="card">

            <div class="card-header card-header-icon card-header-primary">
                <div class="card-icon">
                    <i class="material-icons">group_work</i>
  			        <p>Teams</p>
                </div>
                <h4 class="card-title">View Team</h4>
            </div>

            <%= form_for([:admin, @team]) do |f| %>
            <div class="card-body">  
                <div class="row mt-3">
                    <div class="col-md-12">
                    
                    
                    <div class="row">
                    <div class="col-sm-6 mr-auto">
                      <div class="form-group">
                        <%= f.label :team_name, t("Team Name"), :class=> "bmd-label-floating" %>
                        <%= f.text_field :team_name, autofocus: false, :class =>"form-control ", autocomplete: "off" , :disabled => true%>
                      </div>
                    </div>
                  </div>
                  </br>
                  <div class="row">
                    <div class="col-sm-6 mr-auto">
                      <div class="form-group">
                        <%= f.label :player_one, t("Player One"), :class=> "bmd-label-floating" %>
                        <%= f.text_field :player_one_id, :value => (f.object.player_one_id ? f.object.player_one.first_name + ' ' +  f.object.player_one.last_name : "") , :class =>"form-control typeahead" , autocomplete: "off", :disabled => true%>
                      </div>
                    </div>
                  </div>
                  </br>
                  <div class="row">
                    <div class="col-sm-6 mr-auto">
                      <div class="form-group">
                        <%= f.label :player_two, t("Player Two"), :class=> "bmd-label-floating" %>
                        <%= f.text_field :player_two_id, :value => (f.object.player_two_id ? f.object.player_two.first_name + ' ' +  f.object.player_two.last_name : "") , :class =>"form-control typeahead" , autocomplete: "off", :disabled => true%>
                      </div>
                    </div>
                  </div>                   

      
                    </div>
                    <!-- col-md-12 -->
                </div>
                <!-- end row mt-3 -->
            </div>
            <!-- end card-body -->

            <!-- footer-->
            <div class="card-footer">   
            
                <%= link_to t("back"), admin_teams_path, {:class => "btn btn-link btn-primary mr-auto" } %>
            </div>
            <% end %>

        </div>
         <!-- end card -->
    </div>
    <!-- end col-md-12 -->
</div>    
<!-- end row -->

