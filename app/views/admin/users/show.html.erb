<div class="row">
    <div class="col-md-12">
        <div class="card">

            <div class="card-header card-header-icon card-header-primary">
                <div class="card-icon">
                    <i class="material-icons">person</i>
  			        <p>Users</p>
                </div>
                <h4 class="card-title">View user</h4>
            </div>

            <%= form_for([:admin, @user]) do |f| %>
            <div class="card-body">  
                <div class="row mt-3">
                    <div class="col-md-12">
                    
                    
                    <div class="row">
                        <div class="col-sm-6 mr-auto">
                        <div class="form-group">
                            <%= f.label :first_name, t("First Name"), :class=> "bmd-label-floating" %>
                            <%= f.text_field :first_name, autofocus: false, :class =>"form-control", autocomplete: "off", :disabled => true%>
                        </div>
                        </div>
                    </div>
                    </br>
                    <div class="row">
                        <div class="col-sm-6 mr-auto">
                        <div class="form-group">
                            <%= f.label :text_field, t("Last Name"), :class=> "bmd-label-floating" %>
                            <%= f.text_field :last_name, autofocus: false, :class =>"form-control", autocomplete: "off" , :disabled => true%>
                        </div>
                        </div>
                    </div>

      
                    </div>
                    <!-- col-md-12 -->
                </div>
                <!-- end row mt-3 -->
            </div>
            <!-- end card-body -->

            <!-- footer-->
            <div class="card-footer">   
            
                <%= link_to t("back"), admin_users_path, {:class => "btn btn-link btn-primary mr-auto" } %>
            </div>
            <% end %>

        </div>
         <!-- end card -->
    </div>
    <!-- end col-md-12 -->
</div>    
<!-- end row -->

