<!-- form_with using ajax to save data remote=true -->

<%= form_with(model: [:admin, @user], id: "test") do |f| %>
<div class="card-body">  
  <div class="row mt-3">
    <div class="col-md-12">
    
      
      <div class="row">
        <div class="col-sm-6 mr-auto">
          <div class="form-group">
            <%= f.label :first_name, t("First Name"), :class=> "bmd-label-floating" %>
            <%= f.text_field :first_name, autofocus: false, :class =>"form-control", autocomplete: "off"%>
          </div>
        </div>
      </div>
      </br>
      <div class="row">
        <div class="col-sm-6 mr-auto">
          <div class="form-group">
            <%= f.label :last_name, t("Last Name"), :class=> "bmd-label-floating" %>
            <%= f.text_field :last_name, autofocus: false, :class =>"form-control", autocomplete: "off"%>
          </div>
        </div>
      </div>

      
    </div>
    <!-- col-md-12 -->
  </div>
  <!-- end row mt-3 -->
</div>
<!-- end card-body -->

<!-- footer-->
<div class="card-footer">   
    <button type="submit" class="btn btn-fill btn-primary btn-submit">Save</button> 
    <%= link_to t("back"), admin_users_path, {:class => "btn btn-link btn-primary mr-auto" } %>
</div>
<% end %>