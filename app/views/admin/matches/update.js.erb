
<!-- check if any error -->
<% if @match.errors.any? %>

    $('.is-error').remove();

    <!-- show error message and higlight field for being error -->
    <% @match.errors.each do |key, value| %>

        alert('<%= key %>');
        show_error('<%= key %>', '<%= value %>', '<%= @match.class.name.demodulize %>');
        
        setTimeout (function()  {
            show_notification('<%= value %>', 'warning');
        }, 1000);

    <% end %>

<% end %>