<div class="row">
  <div class="col-md-12">
    <div class="card">

      <!-- div box header -->
      <div class="card-header card-header-icon card-header-primary">
        <div class="card-icon">
          <i class="material-icons">grade</i>
  			  <p>Leaderboards</p>
        </div>
        <h4 class="card-title">Leaderboards</h4>
      </div>

      <!-- box content -->
      <div class="card-body">
            
        <!-- data table -->
        <div class="material-datatables">
        <table class="datatables table table-action non-first-col-ordering" cellspacing="0" width="100%" style="width:100%">
            <thead>
              <tr>
                <th>Team Name</th>
                <th>Total Match</th>
                <th>Total Wins</th>
                <th>Total Loses</th>
                <th>Win Percentage</th>
              </tr>
            </thead>
            <tbody>
            <% @foosball_leaderboards.each do |leaderboard| %>
              <tr>
                  <td><%= leaderboard.team_name %> </td>
                  <td><%= leaderboard.total_match ? leaderboard.total_match : 0 %></td>
                  <td><%= leaderboard.total_win ? leaderboard.total_win : 0 %></td>
                  <td><%= leaderboard.total_lose ? leaderboard.total_lose : 0 %></td>
                  <td><%= leaderboard.win_percentage ? '%.2f' % leaderboard.win_percentage : 0 %></td>
              </tr>
            <% end %>  
            </tbody>
          </table>

        </div>

      </div>

    </div>
    <!-- end card -->

  </div>
  <!-- end col-md-12 -->

</div>    
<!-- end row -->
<%= render "admin/shared/custom" %>